{{ header }}
{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">

      <div class="pull-right">
        <button type="submit" title="{{ button_save }}" class="btn btn-primary" form="form-payment" data-toggle="tooltip">
          <i class="fa fa-save"></i>
        </button>
        <a href="{{ cancel }}" title="{{ button_cancel }}" class="btn btn-default" data-toggle="tooltip"><i class="fa fa-reply"></i></a>
      </div>

      <h1>{{ heading_title }}</h1>

      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li>
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          </li>
        {% endfor %}
      </ul>

    </div>
</div>

<div class="container-fluid">

  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible">
      <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}

  <div class="panel panel-default">

    <div class="panel-heading">
      <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ 'Settings' }}</h3>
    </div>

    <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">

        <ul class="nav nav-tabs" id="tabs">
          <li class="active"><a href="#tab-account" data-toggle="tab">{{ nls_general }}</a></li>
        </ul>

        <div class="tab-content">

          <div class="tab-pane active" id="tab-account">

            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">{{ nls_status }}</label>
              <div class="col-sm-10">
                <select name="payment_bitcoinus_status" id="input-status" class="form-control">
                  {% if payment_bitcoinus_status %}
                    <option value="1" selected="selected">{{ nls_enabled }}</option>
                    <option value="0">{{ nls_disabled }}</option>
                  {% else %}
                    <option value="1">{{ nls_enabled }}</option>
                    <option value="0" selected="selected">{{ nls_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>

            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry-pid">{{ nls_pid }}</label>
              <div class="col-sm-10">
                <input type="number" name="payment_bitcoinus_pid" id="entry-pid" class="form-control" value="{{ payment_bitcoinus_pid }}">
                {% if error_pid %}
                  <div class="text-danger">{{ error_pid }}</div>
                {% endif %}
                <br>
                <div>
                  {{ nls_pid_desc }}
                </div>
              </div>
            </div>

            <div class="form-group required">
              <label class="col-sm-2 control-label" for="entry-key">{{ nls_key }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_bitcoinus_key" id="entry-key" class="form-control" value="{{ payment_bitcoinus_key }}" placeholder="{{ entry_key }}">
                {% if error_key %}
                  <div class="text-danger">{{ error_key }}</div>
                {% endif %}
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="entry-test">{{ nls_items }}</label>
              <div class="col-sm-10">
                <select name="payment_bitcoinus_test" id="entry-items" class="form-control">
                  {% if payment_bitcoinus_items %}
                    <option value="1" selected="selected">{{ nls_send }}</option>
                    <option value="0">{{ nls_dontsend }}</option>
                  {% else %}
                    <option value="1">{{ nls_send }}</option>
                    <option value="0" selected="selected">{{ nls_dontsend }}</option>
                  {% endif %}
                </select>
                <br>
                <div>
                  {{ nls_items_desc }}
                </div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label" for="entry-test">{{ nls_test }}</label>
              <div class="col-sm-10">
                <select name="payment_bitcoinus_test" id="entry-test" class="form-control">
                  {% if payment_bitcoinus_test %}
                    <option value="1" selected="selected">{{ nls_on }}</option>
                    <option value="0">{{ nls_off }}</option>
                  {% else %}
                    <option value="1">{{ nls_on }}</option>
                    <option value="0" selected="selected">{{ nls_off }}</option>
                  {% endif %}
                </select>
                <br>
                <div>
                  {{ nls_test_desc }}
                </div>
              </div>
            </div>

          </div>

        </div>

      </form>
    </div>

  </div>

</div>

{{ footer }}
